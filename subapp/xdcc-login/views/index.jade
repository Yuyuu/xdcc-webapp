doctype html
html
  head
    title #{title}
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    meta(name='author', content='yuyuu')
    link(rel='icon', type="image/png",   href='/img/favicon.png')
    // Le HTML5 shim, for IE6-8 support of HTML5 elements
    //
        [if lt IE 9]
        <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]
    link(href="/bower_components/bootstrap/dist/css/bootstrap.min.css", rel="stylesheet", type="text/css")
    link(href=revision("/login/genere/css/style.css"), rel="stylesheet", type="text/css")
  body.xdcc-webapp-pages(class=clazz, ng-app="login")
    .container
      section
        .panel.panel-default.center-block.text-center(id="login", ng-controller="LoginController as model")
          .logo
            a(href="/")
              span Logo xdcc-webapp
          p.title= t("app.login.form.title")
          .alert.alert-warning(ng-cloak="", ng-if="model.redirectReason", ng-i18next="app.login.errors.{{model.redirectReason}}", role="alert")
          div
            form(role="form", name="login", ng-submit="model.connect(model.credentials)")
              .form-group.has-feedback
                input.form-control(type="text", ng-model="model.credentials.login", placeholder=t("app.login.form.login"), required="")
              .form-group.has-feedback
                input.form-control(type="password", ng-model="model.credentials.password", placeholder=t("app.login.form.password"), required="")
              .alert.alert-danger(ng-cloak="", ng-if="model.errors")
                div(ng-repeat="error in model.errors", ng-i18next="app.login.errors.{{error.message}}")
              button.btn.btn-primary.btn-lg.btn-block(type="submit")= t("app.login.form.log_in")
