    link(href="/bower_components/bootstrap/dist/css/bootstrap.css", rel="stylesheet", type="text/css")
    link(href=revision("/genere/css/style.css"), rel="stylesheet", type="text/css")
  body(ng-app="login")
    .container
      section
        .panel.panel-default.center-block.text-center(id="login", ng-controller="LoginController")
          .logo
            a(href="/")
              span(style="text-indent: -4000px;") Logo xdcc-webapp
          p.title Connexion Ã  Xdcc Web App
          div
            form(role="form", name="login", ng-submit="connect(credentials)")
              .form-group.has-feedback
                input.form-control(type="text", ng-model="credentials.login", placeholder="Login", required="")
              .form-group.has-feedback
                input.form-control(type="password", ng-model="credentials.password", placeholder="Mot de passe", required="")
              button.btn.btn-primary.btn-lg.btn-block(type="submit") Se connecter

    script(src=revision("/genere/js/vendor.js"))
    script(src=revision("/genere/js/login_app.js"))
