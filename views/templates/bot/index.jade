.row
  .col-md-6.col-md-offset-3.search-field
    input.form-control(type="text" placeholder="Search a bot" ng-model="titleFilter")
  .col-md-6.col-md-offset-3.list-group
    a.list-group-item(ng-repeat="bot in bots | filter:titleFilter | orderBy:'name'", ng-href="#/bot/{{bot.id}}")
      | {{bot.name}}
      span.badge {{bot.fileCount}}